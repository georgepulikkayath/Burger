 <div class="container">

        <div class="jumbotron text-center">

            <h1>Burger App</h1>
            <img  src="../assets/img/burger.jpg" alt="burger icon" height="100" width="100"/>
           
        </div>

        <div class="row">

            <div class="col-md-12 ">
                <div class="col-md-4">
                    <div class="leftBurgers">
                     
                        <ul>
                          {{#each burgers}}
                            {{#unless this.devoured}}
                              <li>
                                <p class="burgerType">{{this.burger_name}}</p>
                                <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
                                  <input type="hidden" name="devoured" value="true">
                                  <button class="btnDevour" type="submit">Devour it</button>
                                </form>
                              </li>
                            {{/unless}}
                          {{/each}}
                        </ul>
                    </div>
                </div>

                <div class="col-md-4 text-center">
                    <div class="input">


                        
                        <div class="form-group">
                            <form method="POST" action="burgers/insertOne" class="addOne text-center">
                                <textarea id="textArea" type="text" name="burger_name" rows="2" cols="40"></textarea>
                                <button id="btnCreate"  type="submit" >Submit</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 text-left">
                    <div class="rightBurgers">
                        
                        <ul>
                          {{#each burgers}}
                            {{#if this.devoured}}
                              <li>
                                <p class="burgerType">{{this.burger_name}}</p>
                                
                              </li>
                            {{/if}}
                          {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>